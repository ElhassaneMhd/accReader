# Server Configuration
NODE_ENV=development
PORT=3999
API_URL=http://localhost:3999

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=accreader
DB_USER=root
DB_PASSWORD=

# For development, we'll use SQLite
DB_DIALECT=sqlite
DB_STORAGE=./database.sqlite

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# MailWizz Configuration
MAILWIZZ_API_URL=https://your-mailwizz-domain.com/api
MAILWIZZ_PUBLIC_KEY=your-mailwizz-public-key
MAILWIZZ_PRIVATE_KEY=your-mailwizz-private-key

# PMTA Configuration
PMTA_UPLOAD_DIR=./uploads
PMTA_MAX_FILE_SIZE=52428800

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
